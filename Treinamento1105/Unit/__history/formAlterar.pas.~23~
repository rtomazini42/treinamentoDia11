unit formAlterar;

interface

uses
  System.SysUtils, System.Types, System.UITypes, System.Classes, System.Variants,
  FMX.Types, FMX.Controls, FMX.Forms, FMX.Graphics, FMX.Dialogs, FMX.StdCtrls,
  FMX.Controls.Presentation, FMX.Edit, FMX.Objects, DACs;

type
  TForm2 = class(TForm)
    Rectangle1: TRectangle;
    Rectangle2: TRectangle;
    Rectangle3: TRectangle;
    btnAlterar: TButton;
    btnCancelar: TButton;
    procedure btnAlterarClick(Sender: TObject);
    procedure btnCancelarClick(Sender: TObject);

  private
    { Private declarations }
  public
  entradaCliente: TEdit;
  entradaEmpresa: TEdit;
  procedure alterarCliente(cliente: string; empresa: string);
  end;

var
  Form2: TForm2;

implementation

{$R *.fmx}



procedure TForm2.alterarCliente(cliente: string; empresa: string);
begin

          ShowMessage(empresa);
end;





procedure TForm2.btnAlterarClick(Sender: TObject);
var
  cliente, empresa: string;
begin
  cliente := entradaCliente.Text;
  empresa := entradaEmpresa.Text;

  // Verifica se os campos estão preenchidos
  if (cliente <> '') and (empresa <> '') then
  begin
    // Atualiza os valores no registro atual do qryPesq
    DataModule1.qryPesq.Edit;
    DataModule1.qryPesq.FieldByName('sCLI_Nome').AsString := cliente;
    DataModule1.qryPesq.FieldByName('sCLI_Empresa').AsString := empresa;
    DataModule1.qryPesq.Post;

    ShowMessage('Registro alterado com sucesso');
  end
  else
    ShowMessage('Preencha todos os campos');
end;

procedure TForm2.btnCancelarClick(Sender: TObject);
begin
       ShowMessage('Cancelado');
       Close;
end;





end.


